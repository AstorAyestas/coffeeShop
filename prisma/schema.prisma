datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Client {
    id    String @id @default(cuid())
    name  String
    email String @unique
}

model Food {
    id             String       @id @default(cuid())
    name           String
    description    String
    nutritionFacts String
    price          Decimal
    createdAt      DateTime     @default(now())
    updatedAt      DateTime     @updatedAt
    images         FoodImage[]
    ingredients    Ingredient[]
    // dayFood        DayFood
    Menu           Menu?        @relation(fields: [menuId], references: [id])
    menuId         String?
}

model TypeFood {
    id   String @id @default(cuid())
    type String
}

model FoodImage {
    id        String   @id @default(cuid())
    url       String
    updatedAt DateTime @updatedAt
    Food      Food?    @relation(fields: [foodId], references: [id])
    foodId    String?
}

model Ingredient {
    id          String @id @default(cuid())
    name        String
    description String
    foods       Food[]
}

model Menu {
    id        String   @id @default(cuid())
    highlight String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    food      Food[]

}

